<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.actividades.AyudaAsistencia"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detalle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#03a9f4"
        android:gravity="center_vertical"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:id="@+id/ibRegresar" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>



    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ibPolicia"
        android:src="@mipmap/policia2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ibHopital"
        android:src="@mipmap/hospital2"
        android:layout_alignTop="@+id/ibPolicia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ibPrevencion"
        android:src="@mipmap/precauccion"
        android:layout_below="@+id/ibHopital"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="141dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ibAuxilios"
        android:src="@mipmap/bombero"
        android:layout_alignTop="@+id/ibPrevencion"
        android:layout_alignLeft="@+id/ibHopital"
        android:layout_alignStart="@+id/ibHopital" />

</RelativeLayout>
